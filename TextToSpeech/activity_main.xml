<?xml version="1.0" encoding="utf-8"?>

<!--Usa linear layout-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <!--Este es el edit text con id editTextMessage-->
    <!--Wrap content es ajustar el tamaño al contenido-->
    <EditText
        android:id="@+id/editTextMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Escribe tu mensaje"
        />

	<!--Si se presiona este botón se ejecuta el speakMessage()-->
    <Button
        android:id="@+id/buttonPlayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reproducir mensaje"
        />

    <!--Sólo es un mensaje-->
    <TextView
        android:id="@+id/textViewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World Cruel!"
    />

</LinearLayout>